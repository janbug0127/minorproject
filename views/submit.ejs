        <hr>
        <form action="/submit" method="post" enctype="multipart/form-data"> 
        <!-- INFO SECTION -->
        <section id = "info">
            
            <em>Provide some information about the Manuscript</em>
            <br><br>
            <div class="form-section">
                <strong> Article type selection</strong>
                <br>
                <label><em>Select the paper type</em></label>
                <select class="form-select form-select-sm"  aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            
            <div class="form-section">
                <strong> Attach files</strong>
                <br>
                <div class="custom-file">
                    <input type="file" name="textfile" class="custom-file-input" id="image">
                    <label class="custom-file-label" for="customFile">Browse...</label>
                </div>    
            </div>
            
            <div class="form-section">
                <strong> General information</strong>
                <br>
                <label><em>Select area of interest/ specialization</em></label>
                <select class="form-select form-select-sm"  aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    <option value="1">one</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            
           

            <div class="form-section">
                <strong> Additional Comments</strong>
                <br>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1"><em>Please enter any additional comments you would like to send to the publication office. These comments will not appear directly in your submission.</em></label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
            </div>
            
            <div class="form-section">
                <strong> Manuscript Data</strong>
                <br>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1"><em>Title</em></label>
                    <textarea class="form-control" name="postTitle" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
    
                <div class="form-group">
                    <label for="exampleFormControlTextarea1"><em>Abstract</em></label>
                    <textarea class="form-control" name="postBody" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
    
                <div class="form-group">
                    <label for="exampleFormControlTextarea1"><em>Keywords</em></label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="keywords"></textarea>
                </div>
    
                <div class="form-group">
                    <label for="exampleFormControlTextarea1"><em>Author(s)</em></label>
                    <textarea name="authors" id="exampleFormControlTextarea1"  rows="3" class="form-control"></textarea>
                    <br>
                  
                </div>
                
                
            </div>
            
        </section>

        <!-- SUBMIT SECTION -->
        <section id = "submit">
            <button class="btn btn-primary btn-lg btn-dark" type="submit" value="Upload">Submit Manuscript</button>
        </section>
    </form>

